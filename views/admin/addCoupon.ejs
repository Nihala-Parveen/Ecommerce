<%- include('../layouts/adminhomeHeader.ejs') %>

<div id="page-wrapper">
    <div class="main-page">
        <div class="forms">  
            <ol class="breadcrumb">
                <li><a href="/coupons">Coupons</a></li>
                <li class="active">Add Coupon</li>
            </ol>    
            <div class=" form-grids row form-grids-right">
                <div class="widget-shadow " data-example-id="basic-forms"> 
                    <div class="form-title">
                        <h4>Add Coupon</h4>
                    </div>
                    <div class="form-body">
                        <form class="form-horizontal" action="/addCoupon" method="POST"> 
                            <div class="form-group"> 
                                <label for="catname" class="col-sm-2 control-label">Coupon Code</label> 
                                <div class="col-sm-9"> <input type="text" class="form-control" name="code" required>
                                    <% if(errors && errors.code ) { %>
                                        <span class="text-danger"><%= errors.code %></span>
                                    <% } %></div> 
                            </div> 
                            <div class="form-group"> 
                                <label for="catname" class="col-sm-2 control-label">Coupon Description</label> 
                                <div class="col-sm-9"> <input type="text" class="form-control" name="des" required>
                                    <% if(errors && errors.description ) { %>
                                        <span class="text-danger"><%= errors.description %></span>
                                    <% } %></div> 
                            </div>
                            <div class="form-group"> 
                                <label for="catname" class="col-sm-2 control-label">Discount Amount</label> 
                                <div class="col-sm-9"> <input type="number" class="form-control" name="discount" required></div> 
                            </div>
                            <div class="form-group"> 
                                <label for="catname" class="col-sm-2 control-label">Minimum Amount</label> 
                                <div class="col-sm-9"> <input type="number" class="form-control" name="amount" required></div> 
                            </div>
                            <div class="form-group"> 
                                <label for="catname" class="col-sm-2 control-label">Expiry Date</label> 
                                <div class="col-sm-9"> <input type="date" class="form-control" name="date" required></div> 
                            </div>
                            <div class="col-sm-offset-2"> 
                                <button type="submit" class="btn btn-default">Add Coupon</button> 
                            </div> 
                        </form> 
                        <%
                            if(typeof message !== 'undefined'){
                            %>
                            <p class="text-danger text-center mt-3"><%= message %></p>
                            <%
                            }
                        %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../layouts/adminFooter.ejs') %>