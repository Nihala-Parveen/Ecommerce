<%- include('../layouts/adminhomeHeader.ejs') %>

<div id="page-wrapper">
    <div class="main-page">
        <div class="forms">    
            <ol class="breadcrumb">
                <li><a href="/view-orders">Orders</a></li>
                <li class="active">Change Status</li>
            </ol> 
            <div class=" form-grids row form-grids-right">
                <div class="widget-shadow " data-example-id="basic-forms"> 
                    <div class="form-title">
                        <h4>Change Order Status</h4>
                    </div>
                    <div class="form-body">
                        <form class="form-horizontal" action="/changestatus?id=<%= order._id %>" method="POST"> 
                            <input type="hidden" name="id" value="<%= order._id %>">
                            <div class="form-group"> 
                                <label for="status" class="col-sm-2 control-label">Change Status</label> 
                                <div class="col-sm-9"> <select name="status" id="" class="form-control" required>
                                    <option value="Pending">Pending</option>
                                    <option value="Processing">Processing</option>    
                                    <option value="Shipped">Shipped</option> 
                                    <option value="Delivered">Delivered</option> 
                                </select></div> 
                            </div> 
                            
                            <div class="col-sm-offset-2"> 
                                <button type="submit" class="btn btn-default">Update Status</button> 
                            </div> 
                        </form> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/adminFooter.ejs') %>