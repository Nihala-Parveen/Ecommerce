<%- include('../layouts/adminhomeHeader.ejs') %>

<div id="page-wrapper">
    <div class="main-page">
        <div class="forms"> 
            <ol class="breadcrumb">
                <li><a href="/viewcategory">Categories</a></li>
                <li class="active">Edit Category</li>
            </ol>    
            <div class=" form-grids row form-grids-right">
                <div class="widget-shadow " data-example-id="basic-forms"> 
                    <div class="form-title">
                        <h4>Edit Category</h4>
                    </div>
                    <div class="form-body">
                        <form class="form-horizontal" action="/editcategory?id=<%= category._id %>" method="POST" enctype="multipart/form-data"> 
                            <input type="hidden" name="id" value="<%= category._id %>">
                            <div class="form-group"> 
                                <label for="catname" class="col-sm-2 control-label">Category name</label> 
                                <div class="col-sm-9"> <input type="text" class="form-control" name="catname" value="<%= category.name %>" required></div> 
                            </div> 
                            <div class="form-group"> 
                                <label for="catimg" class="col-sm-2 control-label">Category Image</label> 
                                <div class="col-sm-9"> <img src="/uploads/<%=category.image %>" alt="catimg" height="100px" width="100px" class="mt-3"></div> 
                            </div> 
                            <div class="form-group"> 
                                <label for="catimg" class="col-sm-2 control-label"></label> 
                                <div class="col-sm-9"> <input type="file" class="" name="catImg"></div> 
                            </div> 
                            <div class="col-sm-offset-2"> 
                                <button type="submit" class="btn btn-default">Update</button> 
                            </div> 
                        </form> 
                        <%
                            if(typeof message !== 'undefined'){
                            %>
                            <p class="text-danger text-center mt-3"><%= message %></p>
                            <%
                            }
                        %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/adminFooter.ejs') %>