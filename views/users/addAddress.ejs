<%- include('../layouts/header.ejs') %>
<div class="container mt-5">
    <nav aria-label="breadcrumb" style="background-color: white;">
        <ol class="breadcrumb mt-3">
            <li class="breadcrumb-item"><a href="/home">Home</a></li>
            <li class="breadcrumb-item"><a href="/addresses">Addresses</a></li>
            <li class="breadcrumb-item active" aria-current="page">Add address</li>
        </ol>
    </nav>     
    <form action="/addAddress" method="POST" class="mt-5">
        <div class="mb-3 row">
            <label for="buildingName" class="col-sm-2 col-form-label">Building Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="buildingName" name="buildingName" required>
                <% if (errors && errors.buildingName) { %>
                    <span class="text-danger"><%= errors.buildingName %></span>
                <% } %>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="city" class="col-sm-2 col-form-label">City:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="city" name="city" required>
                <% if (errors && errors.city) { %>
                    <span class="text-danger"><%= errors.city %></span>
                <% } %>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="district" class="col-sm-2 col-form-label">District:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="district" name="district" required>
                <% if (errors && errors.district) { %>
                    <span class="text-danger"><%= errors.district %></span>
                <% } %>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="ZIPcode" class="col-sm-2 col-form-label">ZIP Code:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="ZIPcode" name="ZIPcode" required>
                <% if (errors && errors.ZIPcode) { %>
                    <span class="text-danger"><%= errors.ZIPcode %></span>
                <% } %>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="genric-btn success-border circle form-control mt-4">Add Address</button>
            </div>
        </div>
    </form>
</div>
<%- include('../layouts/footer.ejs') %>