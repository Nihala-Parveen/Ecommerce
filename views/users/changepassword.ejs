<%- include('../layouts/header.ejs') %>

<div class="container">
    <nav aria-label="breadcrumb" style="background-color: white;">
        <ol class="breadcrumb mt-3">
            <li class="breadcrumb-item"><a href="/home">Home</a></li>
            <li class="breadcrumb-item"><a href="/profile">Profile</a></li>
            <li class="breadcrumb-item active" aria-current="page">Change Password</li>
        </ol>
    </nav> 
  <h1 class="fw-bold mt-3">Change Password</h1>
  <form action="/change-password" method="POST">
      <div class="mb-3 row mt-5">
          <label for="oldPassword" class="col-sm-2 col-form-label">Old Password:</label>
          <div class="col-sm-10">
              <input type="password" class="form-control" id="oldPassword" name="oldPassword" required>
          </div>
      </div>
      <div class="mb-3 row mt-5">
          <label for="newPassword" class="col-sm-2 col-form-label">New Password:</label>
          <div class="col-sm-10">
              <input type="password" class="form-control" id="newPassword" name="newPassword" required>
          </div>
      </div>
      <div class="mb-3 row mt-5">
          <label for="confirmNewPassword" class="col-sm-2 col-form-label">Confirm New Password:</label>
          <div class="col-sm-10">
              <input type="password" class="form-control" id="confirmNewPassword" name="confirmNewPassword" required>
          </div>
      </div>
      <button type="submit" class="genric-btn success-border circle form-control mt-4">Change Password</button>
      <% 
          if(typeof message !== 'undefined'){
      %>
          <p class="text-center text-danger"><%= message %></p>
      <%
          }
      %>
  </form>
</div>


<%- include('../layouts/footer.ejs') %>
    