<%- include('../layouts/header.ejs') %>
<section class="confirmation_part section_padding">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="confirmation_tittle">
            <span>Thank you. Your order has been received.</span>
          </div>
        </div>
        <div class="col-lg-6 col-lx-4">
          <div class="single_confirmation_details">
            <h4>order info</h4>
            <ul>
              <li>
                
                <p>order number</p><span>:<%= order._id %></span>
                
              </li>
              
              <li>
                <p>total</p><span>: $<%= order.amount %></span>
              </li>
              <li>
                <p>Payment method</p><span>: <%= order.payment %></span>
              </li>
            </ul>
          </div>
        </div>
        
        <div class="col-lg-6 col-lx-4">
          <div class="single_confirmation_details">
            <h4>Delivery Address</h4>
            <ul>
              <li>
                <p>Building Name</p><span>: <%= order.address.buildingName %></span>
              </li>
              <li>
                <p>city</p><span>: <%= order.address.city %></span>
              </li>
              <li>
                <p>District</p><span>: <%= order.address.district %></span>
              </li>
              <li>
                <p>ZIP Code</p><span>: <%= order.address.ZIPcode %></span>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="order_details_iner">
            <h3>Order Details</h3>
            <table class="table table-borderless">
              <thead>
                <tr>
                  <th scope="col" colspan="2">Product</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Total</th>
                </tr>
              </thead>
              <tbody>
                <% order.products.forEach ( (cartItem) => { %> 
                <tr>
                  <th colspan="2"><span><%= cartItem.productId.name %></span></th>
                  <th>x<%= cartItem.quantity %></th>
                  <th> <span>$<%= cartItem.quantity * cartItem.price %></span></th>
                </tr>
                <% }) %>
                <tr>
                  <th colspan="3">Total</th>
                  <th> <span>$<%= order.amount + order.coupon.couponDiscount %></span></th>
                </tr>
                <tr>
                <tr>
                  <th colspan="3">Discount</th>
                  <th> <span>$<%= order.coupon.couponDiscount %></span></th>
                </tr>
                <tr>
                  <th colspan="3">Subtotal</th>
                  <th> <span>$<%= order.amount %></span></th>
                </tr>
                
              </tbody>
              
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('../layouts/footer.ejs') %>